<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản Lý Đào Tạo - Học viện Bưu Chính Viễn Thông</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
         body{
             padding-top: 0;
         }
        .nav-menu {
            margin-left: 330px !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse narbar-top">
        <div class="container menu-nav-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse nav-menu">
                <ul class="nav navbar-nav nav-custom">
                    <li>@Html.ActionLink("Học viện công nghệ bưu chính viễn thông", "Index", "Home")</li>
                    <li>@Html.ActionLink("Đăng ký môn học", "DangKyMonHoc", "SinhVien")</li>
                    <li>@Html.ActionLink("Thời khóa biểu", "ThoiKhoaBieu", "Home")</li>
                    <li>@Html.ActionLink("Xem học phí", "HocPhi", "Home")</li>
                    <li>@Html.ActionLink("Xem lịch giảng", "LichGiang", "Home")</li>
                    <li id="dangnhap">@Html.ActionLink("Đăng nhập", "Index", "DangNhap")</li>
                    <li><a>@Session["SinhVien"] @Session["GiangVien"]</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
